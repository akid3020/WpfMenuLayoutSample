<Window x:Class="Layout1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layout1"
        mc:Ignorable="d"
        Title="左サイドメニューレイアウト" Height="600" Width="1000"
        Background="#F5F5F5" WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style x:Key="SideMenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="40,12,20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" Margin="12,2,8,2">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E8F4FD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D0E7FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GroupHeaderStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12,20,8"/>
            <Setter Property="Margin" Value="0,12,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" Margin="8,2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter Grid.Column="0" 
                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalAlignment="Center"
                                                Margin="{TemplateBinding Padding}"/>
                                <Path Grid.Column="1" 
                                      Name="ExpandIcon"
                                      Stroke="{TemplateBinding Foreground}" 
                                      StrokeThickness="1.5"
                                      Data="M0,0 L4,4 L8,0" 
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,20,0"
                                      RenderTransformOrigin="0.5,0.5">
                                    <Path.RenderTransform>
                                        <RotateTransform x:Name="IconRotation" Angle="0"/>
                                    </Path.RenderTransform>
                                </Path>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ContentAreaStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModalButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10,20,10"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- サイドメニュー -->
        <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="8" ShadowDepth="2"/>
            </Border.Effect>
            
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <!-- ヘッダー -->
                    <Border Background="#2196F3" Height="80">
                        <TextBlock Text="Navigation Sample" 
                                 Foreground="White" 
                                 FontSize="18" 
                                 FontWeight="SemiBold"
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"/>
                    </Border>

                    <!-- グループA -->
                    <Button Name="btnGroupA" Content="グループA" Style="{StaticResource GroupHeaderStyle}" Click="ToggleGroup"/>
                    <StackPanel Name="panelGroupA">
                        <Button Name="btnScreenA1" Content="画面A-1" Style="{StaticResource SideMenuButtonStyle}" Click="NavigateToScreen"/>
                        <Button Name="btnScreenA2" Content="画面A-2" Style="{StaticResource SideMenuButtonStyle}" Click="NavigateToScreen"/>
                        <Button Name="btnScreenA3" Content="画面A-3" Style="{StaticResource SideMenuButtonStyle}" Click="NavigateToScreen"/>
                    </StackPanel>

                    <!-- グループB -->
                    <Button Name="btnGroupB" Content="グループB" Style="{StaticResource GroupHeaderStyle}" Click="ToggleGroup"/>
                    <StackPanel Name="panelGroupB">
                        <Button Name="btnScreenB1" Content="画面B-1" Style="{StaticResource SideMenuButtonStyle}" Click="NavigateToScreen"/>
                        <Button Name="btnScreenB2" Content="画面B-2（モーダル対応）" Style="{StaticResource SideMenuButtonStyle}" Click="NavigateToScreen"/>
                    </StackPanel>

                    <!-- グループC -->
                    <Button Name="btnGroupC" Content="グループC" Style="{StaticResource GroupHeaderStyle}" Click="ToggleGroup"/>
                    <StackPanel Name="panelGroupC">
                        <Button Name="btnScreenC1" Content="画面C-1" Style="{StaticResource SideMenuButtonStyle}" Click="NavigateToScreen"/>
                        <Button Name="btnScreenC2" Content="画面C-2" Style="{StaticResource SideMenuButtonStyle}" Click="NavigateToScreen"/>
                        <Button Name="btnScreenC3" Content="画面C-3（モーダル対応）" Style="{StaticResource SideMenuButtonStyle}" Click="NavigateToScreen"/>
                    </StackPanel>

                    <!-- スペーサー -->
                    <Border Height="30"/>

                    <!-- 管理機能 -->
                    <Button Name="btnGroupAdmin" Content="管理機能" Style="{StaticResource GroupHeaderStyle}" Click="ToggleGroup"/>
                    <StackPanel Name="panelGroupAdmin">
                        <Button Name="btnAdmin1" Content="ユーザー管理" Style="{StaticResource SideMenuButtonStyle}" Click="NavigateToScreen"/>
                        <Button Name="btnAdmin2" Content="システム設定" Style="{StaticResource SideMenuButtonStyle}" Click="NavigateToScreen"/>
                        <Button Name="btnAdmin3" Content="ログ表示" Style="{StaticResource SideMenuButtonStyle}" Click="NavigateToScreen"/>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- メインコンテンツエリア -->
        <Border Grid.Column="1" Style="{StaticResource ContentAreaStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ヘッダー部分 -->
                <Border Grid.Row="0" Background="#FAFAFA" CornerRadius="12,12,0,0" Padding="30,20">
                    <StackPanel>
                        <TextBlock Name="txtCurrentScreen" Text="ホーム画面" FontSize="24" FontWeight="SemiBold" Foreground="#333333"/>
                        <TextBlock Text="画面の説明がここに表示されます" FontSize="14" Foreground="#666666" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- コンテンツ部分 -->
                <Border Grid.Row="1" Padding="30">
                    <StackPanel Name="contentArea">
                        <TextBlock Text="左のサイドメニューから画面を選択してください。" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#999999"/>
                        
                        <!-- サンプルコンテンツ（初期表示用） -->
                        <Border Background="#F8F9FA" CornerRadius="8" Padding="20" Margin="0,30,0,0">
                            <StackPanel>
                                <TextBlock Text="📋 機能概要" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                                <TextBlock TextWrapping="Wrap" LineHeight="24" Foreground="#555555">
                                    <Run Text="• 左サイドバーには4つのグループ（A、B、C、管理機能）があります"/>
                                    <LineBreak/>
                                    <Run Text="• 各メニューをクリックすると対応する画面に遷移します"/>
                                    <LineBreak/>
                                    <Run Text="• 一部の画面では「子画面表示」ボタンでモーダルダイアログを開けます"/>
                                    <LineBreak/>
                                    <Run Text="• モダンなデザインと使いやすいナビゲーションを実現しています"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
