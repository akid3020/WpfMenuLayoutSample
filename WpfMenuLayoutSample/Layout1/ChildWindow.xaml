<Window x:Class="Layout1.ChildWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layout1"
        mc:Ignorable="d"
        Title="子画面" Width="600"
        SizeToContent="Height"
        Background="#F5F5F5" WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#757575"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#616161"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#424242"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー部分 -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="30,20">
            <StackPanel>
                <TextBlock Text="モーダルダイアログ" FontSize="20" FontWeight="SemiBold" Foreground="#333333"/>
                <TextBlock Text="これは子画面のサンプルです" FontSize="14" Foreground="#666666" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- コンテンツ部分 -->
        <Border Grid.Row="1" Background="White" Padding="30">
            <StackPanel>
                <TextBlock Text="📝 入力フォーム例" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,20"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="名前:" VerticalAlignment="Center" Margin="0,0,15,15" FontWeight="SemiBold"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Name="txtName" Height="30" Margin="0,0,0,15" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="メールアドレス:" VerticalAlignment="Center" Margin="0,0,15,15" FontWeight="SemiBold"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Name="txtEmail" Height="30" Margin="0,0,0,15" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="説明:" VerticalAlignment="Top" Margin="0,8,15,15" FontWeight="SemiBold"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Name="txtDescription" Height="80" Margin="0,0,0,15" 
                             TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

                    <CheckBox Grid.Row="3" Grid.Column="1" Name="chkAgree" Content="利用規約に同意する" Margin="0,10,0,0"/>
                </Grid>

                <Border Background="#F8F9FA" CornerRadius="8" Padding="15" Margin="0,30,0,0">
                    <StackPanel>
                        <TextBlock Text="💡 ヒント" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock Text="この子画面はモーダルダイアログとして動作します。親画面の操作はブロックされ、この画面を閉じるまで操作できません。" 
                                 TextWrapping="Wrap" FontSize="13" Foreground="#555555"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- ボタン部分 -->
        <Border Grid.Row="2" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="btnCancel" Content="キャンセル" Style="{StaticResource CancelButtonStyle}" Click="CancelButton_Click"/>
                <Button Name="btnOk" Content="OK" Style="{StaticResource ActionButtonStyle}" Click="OkButton_Click" Margin="10,0" MinWidth="100"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>