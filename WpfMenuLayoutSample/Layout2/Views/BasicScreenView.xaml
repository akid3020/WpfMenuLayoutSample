<UserControl x:Class="Layout2.Views.BasicScreenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    
    <Border Background="White" CornerRadius="8" Padding="30" Margin="0,20,0,0">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="5" ShadowDepth="2"/>
        </Border.Effect>
        
        <StackPanel>
            <TextBlock Name="txtTitle" Text="基本画面" FontSize="20" FontWeight="SemiBold" 
                       Foreground="#333333" Margin="0,0,0,15"/>
            
            <TextBlock Name="txtDescription" Text="この画面では基本的な操作を行います。" FontSize="14" 
                       Foreground="#666666" TextWrapping="Wrap" Margin="0,0,0,20"/>
            
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0" Text="名前:" VerticalAlignment="Center" 
                           Margin="0,0,15,10" FontWeight="SemiBold"/>
                <TextBox Grid.Row="0" Grid.Column="1" Height="30" Margin="0,0,0,10" 
                         Padding="8" BorderBrush="#CCCCCC" BorderThickness="1"/>
                
                <TextBlock Grid.Row="1" Grid.Column="0" Text="カテゴリ:" VerticalAlignment="Center" 
                           Margin="0,0,15,10" FontWeight="SemiBold"/>
                <ComboBox Grid.Row="1" Grid.Column="1" Height="30" Margin="0,0,0,10"
                          Padding="8" BorderBrush="#CCCCCC" BorderThickness="1">
                    <ComboBoxItem Content="カテゴリA"/>
                    <ComboBoxItem Content="カテゴリB"/>
                    <ComboBoxItem Content="カテゴリC"/>
                </ComboBox>
                
                <TextBlock Grid.Row="2" Grid.Column="0" Text="説明:" VerticalAlignment="Top" 
                           Margin="0,8,15,0" FontWeight="SemiBold"/>
                <TextBox Grid.Row="2" Grid.Column="1" Height="60" Margin="0,0,0,0"
                         Padding="8" BorderBrush="#CCCCCC" BorderThickness="1" 
                         TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
            </Grid>
            
            <Button Content="実行" Style="{StaticResource ActionButtonStyle}" HorizontalAlignment="Right" />
        </StackPanel>
    </Border>
</UserControl>